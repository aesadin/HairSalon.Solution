@{
  Layout = "_Layout";
}

@model Salon.Models.Stylist
<h4>Add a Stylist</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Availability)
    @Html.TextBoxFor(model => model.Availability)
    <input type="submit" value="Add new Stylist" />
}
<p>@Html.ActionLink("Show all Stylists", "Index")</p>